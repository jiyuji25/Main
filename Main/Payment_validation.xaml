<Window x:Class="Main.PaymentValidation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Payment Validation" 
        Height="243" Width="614" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="True">

    <!-- Border to create a black frame -->
    <Border BorderBrush="Black" BorderThickness="5" CornerRadius="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Centered and Larger Text -->
            <TextBlock Text="You need to pay the total amount to print your file." 
                       TextWrapping="Wrap" FontSize="28" FontWeight="Bold" TextAlignment="Center"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

            <!-- Close Button (X) -->
            <Button Content="X" Width="50" Height="50" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,10,10,0" Click="CloseButton_Click"/>

        </Grid>
    </Border>
</Window>
